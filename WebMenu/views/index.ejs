<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="menu-container">
      <h1><%= title %></h1>

      <!-- Filter Buttons -->
      <div class="filter-container">
        <form action="/" method="get">
          <button type="submit" name="category" value="" <%= !category ? 'class="active"' : '' %>>All</button>
          <% categories.forEach(categoryOption => { %>
            <button type="submit" name="category" value="<%= categoryOption %>" 
              <%= categoryOption === category ? 'class="active"' : '' %>><%= categoryOption %></button>
          <% }); %>
        </form>
      </div>
      
      <!-- Menu Items -->
      <ul>
        <% items.map((item, index) => { %>
        <li class="menu-item">
          <div><h3><%= item.name %></h3></div>
          <div class="price"><%= item.price %>,-</div>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
